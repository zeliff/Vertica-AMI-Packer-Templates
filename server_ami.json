{
  "variables": {
    "ami_name": "Vertica Server ",
    "aws_access_key": "",
    "aws_secret_key": "",
    "build_number": "unknown",
    "rpm_dir": "rpms",
    "instance_type": "",
    "vpc_id": "",
    "subnet_id": "",
    "secgrp_id": ""
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "ssh_pty": "true",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "{{user `base_ami`}}",
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "{{user `ssh_username`}}",
      "ami_name": "Vertica {{user `os_name`}} {{user `os_version`}} - {{timestamp}}",
      "security_group_id": "{{user `secgrp_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "vpc_id": "{{user `vpc_id`}}",
      "ena_support": "true",
      "sriov_support": "true",
      "associate_public_ip_address": "true",
      "tags": 
        {
            "OS": "{{user `os_name`}}",
            "OS Version": "{{user `os_version`}}",
            "Name": "Vertica {{user `vertica_version`}}",
            "Build": "{{user `build_number`}}"
        },
            "launch_block_device_mappings": [
        {
           "device_name": "{{user `root_device`}}",
           "volume_size": 30,
           "volume_type": "gp2",
           "delete_on_termination": true
        },
         {
            "device_name": "/dev/xvdb",
            "delete_on_termination": "true",
            "volume_size": 20,
            "volume_type": "gp2"
         }
       ]
    }
  ],

  "provisioners": [
        {
      "type": "shell",
      "inline": [
            "echo ***",
            "echo Creating swap file",
            "echo ***",
            "sudo dd if=/dev/zero of=/swapfile bs=1024 count=2097152",
            "sudo chmod -v 600 /swapfile",
            "sudo mkswap /swapfile",
            "sudo swapon -v /swapfile"
        ]
    },
    {
      "type": "shell",
      "inline": [
            "echo ***",
            "echo Create /dev/xvdb1 for use as /vertica/data",
            "echo ***"
        ]
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'",
      "script": "provisioners/create_data_partition.sh"

    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'",
      "script": "provisioners/update_fstab.sh"
    },
    {
      "type": "file",
      "source": "provisioners/fragment.rc.local.common",
      "destination": "fragment.rc.local"
    },         
    {
      "type": "file",
      "source": "provisioners/fragment.rc.local.{{user `os_distro_id`}}",
      "destination": "fragment.rc.local.platform"
    },         
    {
      "type": "file",
      "source": "provisioners/fragment.sysctl.conf",
      "destination": "fragment.sysctl.conf"
    }, 
    {
      "type": "file",
      "source": "provisioners/motd",
      "destination": "motd"
    },
    {
      "type": "file",
      "source": "{{user `rpm_dir`}}/",
      "destination": "."
    },         
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'",
      "scripts": [
        "provisioners/common_install_update_software.sh",
        "provisioners/ec2/build_install_s3fs.sh",
        "provisioners/ec2/install_awscli.sh",
        "provisioners/common_prepare_platform.sh",
        "provisioners/server_install_rpms.sh",  
        "provisioners/common_create_dbadmin.sh",
        "provisioners/ec2/cloudwatch_monitor_scripts.sh",
        "provisioners/configure_user_limits.sh",
        "provisioners/common_cleanup.sh"
        ]
    }
  ]
}
